<!--pages/calc/calc.wxml-->
<view class="container">
	<view class="header">
		<view class="semester_box">  
			<view class="semester"> semester 1, 2021 </view>
		</view>
		<view class="course_box"> 
			<!-- <view class="course"> course </view> -->
			<view class="weui-search-bar {{inputShowed ? 'weui-search-bar_focusing' : ''}}" id="searchBar">
			<form class="weui-search-bar__form">
				<view class="weui-search-bar__box">
					<i class="weui-icon-search"></i>
                    <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
                    <span class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput"></span>
				</view>
				<label class="weui-search-bar__label" bindtap="showInput">
					<i class="weui-icon-search"></i>
				</label>
			</form>
            <view class="weui-search-bar__cancel-btn" bindtap="hideInput">取消</view>
			</view>
			<view class="weui-cells searchbar-result" wx:if="{{inputVal.length > 0}}">
				<view class="weui-cell weui-cell_active weui-cell_access" wx:for="{{matchedItems}}">
					<view class="weui-cell__bd weui-cell_primary">
						<view>{{item.name}}</view>
					</view>
				</view>
			</view>
	  </view>
		<view wx:if="{{isDoublePass}}" class="prompot">
			this course is double pass!
		</view>
	</view>
	<view class="body">

	</view>
	<view class="bottom">
		<view>Total Score:</view>
		<view>Total Dropped:</view>
	</view>
</view>
