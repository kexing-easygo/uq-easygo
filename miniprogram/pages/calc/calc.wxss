.container {
    height: 100%;
    width: 100%;
    display: flex;
    margin-top: 10rpx;
    box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
  }
  
  .header {
    height: 312rpx;
    width: 100%;
    background-color: #FFA9A3;
    flex-wrap: wrap;
    display: flex;
  }
  
  .semester_box {
      width: 378rpx;
      height: 60rpx;
      position: absolute;
      margin-left: 50rpx;
      margin-top: 70rpx;
      background-color: #ffffff;
      border-radius: 4rpx;
    }
  
  .course_box {
      width: 378rpx;
      height: 60rpx;
      position: absolute;
      margin-left: 50rpx;
      margin-top: 150rpx;
      background-color: #ffffff;
      border-radius: 4rpx;
    }
  
  .semester {
      font-size: 100%;
      text-align: justify;
      margin-left: 20rpx;
  }
  
  .course {
      font-size: 100%;
      text-align: justify;
      margin-left: 20rpx;
      color: #B2B2B2;
  }
  
  .prompot {
    position: absolute;
    margin-left: 170rpx;
    margin-top: 240rpx;
