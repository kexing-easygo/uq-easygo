<!--miniprogram/pages/autoCountDown.wxml-->
<view class="container">

	<view class="searchArea">
		<input style="padding-left:40rpx;" type="text" class="searchBar" maxlength="8" bindinput="bindCourseInput" placeholder="CSSE1001"/>
		<view class="searchButton">
				<button class="mini-btn" type="primary" size="mini" bindtap="fetchCourseInfo">搜索</button>
		</view>
	</view>

	<!-- searchResult展示部分 -->
	<view class="{{showResult? 'result':'hide'}}">
		<view class="resultHeader">
			<view style="margin-left: 30rpx;">搜索结果</view>
			<view style="margin-right: 30rpx;">
				<icon class="icon-small" type="warn" size="20"></icon>
				标注需自主添加时间
			</view>
		</view>

		<!-- 每有一个搜索结果增加一个resultElement block -->
		<checkbox-group class="resultBox" bindchange="selectAssessments">
			<view class="resultElement" wx:for="{{assessments}}" wx:key="index" wx:for-item="item" wx:for-index="index">
				<icon wx:if="{{item.date == 'TBD'}}" class="{{warning? 'icon-small':'hide'}}" type="warn" size="20"></icon>
				<view class="assignmentName">{{item.name}}</view>
				<checkbox value="{{index}}"/>
			</view>
		</checkbox-group>
