/* pages/addCountDown/addCountDown.wxss */
.container {
  color: #707070;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
} 
.heading, .due_date, .colours {
  width: 100%;
  height: 100rpx;
  font-size: 34rpx;
  color: rgba(0,0,0,0.9);
  background-color: #FFFFFF;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
  margin: 25rpx 0rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}

.cdtitle {
  margin-left: 10%;
  height: fit-content;
  width: 180rpx;
}

.cdDetail {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  margin-left: 30rpx;
}

.colorButton {
  width: 40rpx;
  height: 40rpx;
  border-radius: 80%;
  margin-right: 15rpx;
}

picker {
  margin-right: 30rpx;
}

.notice_duration {
  width: 110%;
  display: flex;
  height: 300rpx;
  flex-direction: column;
  align-items: center;
  margin: 25rpx 0rpx;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
  background-color: #FFFFFF;
}
.notice_duration view {
  display: flex;
  width: 100%;
  height: 100rpx;
  padding-left: 80rpx;
  border-bottom: 1rpx solid #EDEDED;
  align-items: center;
}
.notice_duration switch {
  margin-left: auto;
  margin-right: 80rpx;
}
.notice_duration view text {
  margin-left: 85rpx;
}
.confirm, .delete{
  margin-top: 80rpx;
  width: 100%;
  padding:0;
}

.confirm button{
  background-color: #07C160;
  border: 1rpx soild #000000;
  border-radius: 15rpx;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
}

.delete button{
  background-color: #c10716;
  border: 1rpx soild #000000;
  border-radius: 15rpx;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
}


