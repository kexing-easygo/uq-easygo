/* checkbox style */
/*checkbox 整体大小  */
checkbox{
  margin-left: auto;
  margin-right: 80rpx;
  position: relative;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
/*checkbox 选项框大小  */
 checkbox .wx-checkbox-input {
  background-color: rgb(233, 227, 227);
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  margin-top: -20rpx;
  top: 50%;
  border-radius: 50%;
  border-color: transparent; 
}

.confirmOrDele {
  font-size: 34rpx;
  color: rgba(255, 255, 255,1);
}





  