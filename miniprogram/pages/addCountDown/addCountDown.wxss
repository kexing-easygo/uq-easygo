/* pages/addCountDown/addCountDown.wxss */
.container {
  color: #707070;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
} 
.heading {
  width: 100%;
  height: 100rpx;
  background-color: #FFFFFF;
  margin: 25rpx 0rpx;
  display: flex;
  align-items: center;
  padding-left: 80rpx;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
}
.due_date {
  width: 100%;
  height: 100rpx;
  background-color: #FFFFFF;
  margin: 25rpx 0rpx;
  display: flex;
  align-items: center;
  padding-left: 80rpx;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
}
.colours {
  width: 100%;
  height: 100rpx;
  background-color: #FFFFFF;
  margin: 25rpx 0rpx;
  display: flex;
  align-items: center;
  padding-left: 80rpx;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
}
.input {
  margin-left: 8%;
  width: 70%;
}
.notice_duration {
  width: 110%;
  display: flex;
  height: 300rpx;
  flex-direction: column;
  align-items: center;
  margin: 25rpx 0rpx;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
  background-color: #FFFFFF;
}
.notice_duration view {
  display: flex;
  width: 100%;
  height: 100rpx;
  padding-left: 80rpx;
  border-bottom: 1rpx solid #EDEDED;
  align-items: center;
}
.notice_duration switch {
  margin-left: auto;
  margin-right: 80rpx;
}
.notice_duration view text {
  margin-left: 85rpx;
}
.confirm {
  margin-top: 100rpx;
  width: 100%;
  padding:0;
}

.confirm button{
  background-color: #07C160;
  border: 1rpx soild #000000;
  border-radius: 25rpx;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
}
.delete {
  background-color: #c10716;
  margin-top: 100rpx;
  margin-left: 40%;
  margin-right: 30%;
  width: 50%;
  border: 1rpx soild #000000;
  border-radius: 25rpx;
  /* box-shadow: 0 10rpx 10rpx 2rpx #cccccc; */
}

/* 必写提示，右上角星号 */
.red-star {
  padding:0;
  color: red;
}

/* checkbox style */
/*checkbox 整体大小  */
checkbox{
  margin-left: auto;
  margin-right: 80rpx;
  position: relative;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
/*checkbox 选项框大小  */
 checkbox .wx-checkbox-input {
  background-color: rgb(233, 227, 227);
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  margin-top: -20rpx;
  top: 50%;
  border-radius: 50%;
  border-color: transparent; 
}





  