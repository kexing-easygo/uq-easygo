<!--pages/addCountDown/addCountDown.wxml-->
<view class="container">

	<view class="heading">
		<text style="margin-left: 50rpx;">标题:</text>
		<input class="input" auto-focus bindinput="bindTitleInput" placeholder="{{title}}" />
	</view>

	<view class="due_date">
		<text style="margin-left: 50rpx; width:20%">Due date:</text>
		<picker mode="date" value="{{dueDate}}" start="2021-01-01" end="2021-12-31" bindchange="bindDateChange" style="width:40%;">
			<view class="picker">
				<text style="margin-left: 50rpx; margin-right: 50rpx;">{{dueDate}}</text>
			</view>
		</picker>
		<picker mode="time" value="{{dueTime}}" start="00:00" end="23:59" bindchange="bindTimeChange" style="width:40%;">
			<view class="picker">
				<text style="margin-left: 50rpx; margin-right: 50rpx;">{{dueTime}}</text>
			</view>
		</picker>
	</view>
	
	<view class="colours">
		<text style="margin-right: 54rpx;margin-left: 50rpx;">设置颜色</text>
		<view>
			<button class="mini-btn" type="primary" size="mini" style="width: 40rpx; height: 40rpx; background-color: #FE5B5B;border-radius: 100rpx; margin-left: 22rpx;" bindtap="bindRed"></button>
		</view>
		<view>	
			<button class="mini-btn" type="primary" size="mini" style="width: 40rpx; height: 40rpx; background-color: #FF8FDE;border-radius: 100rpx; margin-left: 22rpx;" bindtap="bindPink"></button>
		</view>
		<view>	
			<button class="mini-btn" type="primary" size="mini" style="width: 40rpx; height: 40rpx; background-color: #77D5FF;border-radius: 100rpx; margin-left: 22rpx;" bindtap="bindLightBlue"></button>
		</view>
		<view>	
			<button class="mini-btn" type="primary" size="mini" style="width: 40rpx; height: 40rpx; background-color: #8877FF;border-radius: 100rpx; margin-left: 22rpx;" bindtap="bindPurple"></button>
		</view>
		<view>	
			<button class="mini-btn" type="primary" size="mini" style="width: 40rpx; height: 40rpx; background-color: #E3FF6E;border-radius: 100rpx; margin-left: 22rpx;" bindtap="bindYellow"></button>
		</view>
		<view>	
			<button class="mini-btn" type="primary" size="mini" style="width: 40rpx; height: 40rpx; background-color: #9EFF97;border-radius: 100rpx; margin-left: 22rpx;" bindtap="bindGreen"></button>
		</view>
	</view>

	<view class="colours">
		<text style="margin-right: 54rpx;margin-left: 50rpx;">当前颜色</text>
		<view>
			<button class="mini-btn" type="primary" size="mini" style="width: 40rpx; height: 40rpx; background-color: {{color}};border-radius: 100rpx; margin-left: 22rpx;"></button>
		</view>
	</view>
