<!--pages/addCountDown/addCountDown.wxml-->
<view class="container">

	<view class="heading">
		<text class = "cdtitle" >标题名称<text class="red-star">*</text></text>
		<view class="cdDetail">
			<input class="input" auto-focus bindinput="bindTitleInput" placeholder="{{title}}" />
		</view>
	</view>

	<view class="due_date">
		<text class = "cdtitle">Due Date<text class="red-star">*</text></text>
		<view class="cdDetail">
			<picker mode="date" value="{{dueDate}}" start="2021-01-01" end="2021-12-31" bindchange="bindDateChange" >
				<view class="picker">
					<text >{{dueDate}}</text>
				</view>
			</picker>
			<picker mode="time" value="{{dueTime}}" start="00:00" end="23:59" bindchange="bindTimeChange" style="width:20%;">
				<view class="picker">
					<text >{{dueTime}}</text>
				</view>
			</picker>
		</view>
	</view>
	
	<view class="colours">
		<text class = "cdtitle">设置颜色</text>
		<view class="cdDetail ">
			<view>
				<button class="mini-btn colorButton" type="primary" size="mini" style="background-color: #FA5151;" bindtap="bindRed"></button>
			</view>
			<view>	
				<button class="mini-btn colorButton" type="primary" size="mini" style="background-color: #FFC300;" bindtap="bindPink"></button>
			</view>
			<view>	
				<button class="mini-btn colorButton" type="primary" size="mini" style="background-color: #07C160;" bindtap="bindLightBlue"></button>
			</view>
			<view>	
				<button class="mini-btn colorButton" type="primary" size="mini" style="background-color: #1485EE;" bindtap="bindPurple"></button>
			</view>
			<view>	
				<button class="mini-btn colorButton" type="primary" size="mini" style="background-color: #576B95;" bindtap="bindYellow"></button>
			</view>
		</view>
	</view>

