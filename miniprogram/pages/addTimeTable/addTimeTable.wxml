  <view class="searchArea">
    <view class="searchBar">
      <icon class="icon-small" type="search" style="margin-right:20rpx"  size="34"></icon>
      <input style="margin-left:50rpx" type="text" maxlength="8" bindinput="timeCourse" placeholder="课程名称"/>
