		<view class="searchButton">
				<button class="mini-btn" type="primary" size="mini" bindtap="searchCourseTime">搜索</button>
		</view>
	</view>
  <view class="colorPick">
    <text class="cdtitle">设置颜色</text>
    <view class="cdDetail">
      <view>
        <button class="{{clicked_1? 'clicked':'colorButton'}}" type="primary" size="mini" style="background-color: #FF7043;"
          bindtap="bindRed"></button>
      </view>
      <view>
        <button class="{{clicked_2? 'clicked':'colorButton'}}" type="primary" size="mini" style="background-color: #FFB300;"
          bindtap="bindPink"></button>
      </view>
      <view>
        <button class="{{clicked_3? 'clicked':'colorButton'}}" type="primary" size="mini" style="background-color: #8BC34A;"
          bindtap="bindLightBlue"></button>
      </view>
      <view>
        <button class="{{clicked_4? 'clicked':'colorButton'}}" type="primary" size="mini" style="background-color: #29B6F6;"
          bindtap="bindPurple"></button>
      </view>
      <view>
        <button class="{{clicked_5? 'clicked':'colorButton'}}" type="primary" size="mini" style="background-color: #576B95;"
          bindtap="bindYellow"></button>
      </view>
    </view>
  </view>

</view>


<view class="timeSelectContainer">
  <checkbox-group bindchange="chooseClass">
  <view class="timeContainer" wx:for="{{courseTimeDeatial}}" wx:for-item="item" wx:for-index="index">
    <view class="timeItem">
      <text class="timeDetail">{{item.type}} {{item.location}} {{item.weekday}} {{item["start-end"]}}</text>
      <checkbox class="checkoption"  value="{{index}}"  />
    </view>
  </view>
  </checkbox-group>
</view>

<view class="confirm" wx:if="{{showButton}}">
  <button bindtap="confirmSelect" type="primary"><text class="">确定</text></button>
</view>


