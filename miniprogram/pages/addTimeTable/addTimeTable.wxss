.container {
  color: #707070;
  height: fit-content;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
} 

.courseSearch, .colorPick {
  width: 100%;
  height: 100rpx;
  font-size: 34rpx;
  color: rgba(0,0,0,0.9);
  background-color: #FFFFFF;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
  margin: 25rpx 0rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}

.cdtitle {
  margin-left: 7%;
  height: fit-content;
  
}

.cdDetail {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  margin-left: 30rpx;
  
  /* background-color: blue; */
}

.searchbutton {
  width: 12rpx;
}

.colorButton {
  width: 40rpx;
  height: 40rpx;
  border-radius: 80%;
  margin-right: 22rpx;
  transition:width 2s;
}

.clicked {
  width: 40rpx;
  height: 40rpx;
  border-radius: 80%;
  margin-right: 22rpx;
  transition:width 2s;
  outline: 1px dashed #CE843B;
}

