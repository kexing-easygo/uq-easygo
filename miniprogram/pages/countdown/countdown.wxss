.navi-buttons {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  display: flex;
  flex-direction: column;
}

.searchbar {
  width: 80%;
  height: 84rpx;
 
  background-color: #FFFFFF;
  margin: -5% 10% 0 10%;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
}

.history {
  position:absolute;
  background-color: whitesmoke;
  width: 80%;
  margin: 2% auto 0 auto;
  z-index: 999;

}

.historyItem {
  border-bottom-style: solid;
  border-bottom-width: 1px;
  width: 100%;
  margin:  auto;
  border-radius: 2%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  z-index: 99;
}

.hisIcon {
  width: 60rpx;
  height: 60rpx;
  padding: 2% 3%;
  z-index: 2;
}

.hisContent {

  font-size: 1em;
  z-index: 2;
}


/* +号菜单样式 */
.menu-switch {
  display: flex;
  flex-direction: row;
  z-index: 2;
  position: fixed;
  bottom: 150rpx;
  right: 30rpx;
}

.add_event{   
  display: inline-block;   
  height: 80rpx;   
  width: 80rpx;   
}  
/*遮罩层 */  
.shade{   
  width:100%;   
  height:100%;   
  top:0;   
  background:rgba(247, 247, 247, 0.7);   
  overflow: hidden;   
  z-index: 1;   
  position: absolute;  
  }   
  
/*显示与隐藏的内容即点击核算后所展示的详细内容 */  
.contents { 
  display: flex;
  align-items: flex-end;
  flex-direction: column; 
  position: fixed;
  bottom: 245rpx;
  right: 30rpx; 
}  

.contents view {
  display: flex;
  flex-direction: row;
  margin-bottom: 16rpx;
  justify-content: center;
  align-items: baseline;
}

.contents view image {
  margin-left: 15rpx;
  vertical-align: middle;
}
    
/*显示整个conts */  
.show{   
  display: block;  
}  
/*隐藏整个conts */  
.hide{   
  display: none;  
}  

.page__bd {
  width: 100%;
}