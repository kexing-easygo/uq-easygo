/* pages/countdown/countdown.wxss */
.container {
  font-size: 16pt;
  color: #707070;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 4rpx;
  flex-wrap: wrap;
}
.header {
  height: 312rpx;
  width: 100%;
  background-color: #FFA9A3;
  color:#707070;
  display: flex;
  justify-items: center;
  align-items: center;
  flex-wrap: nowrap;
}
.header_subject {
  width: 35%;
  padding:0 7.5%;
  color: #000000;
  font-weight: bold;
  height: fit-content;
  text-align: left;
  word-wrap: break-word;
  font-size: 1.4em;
  line-height: 1.2em;
}
.remain_day {
  width: 20%;
  color: #000000;
  height: fit-content;
  text-align: left;
  font-size: 3em;
  padding-right: 5%;
}
.days {
  font-size: 28rpx;
  text-align: center;
  color:#FFFFFF;
  background-color: yellow;
  width: 15%;
  background-color: #4A4A4A;
  border-radius: 5px;
  padding: 5rpx 0;
  align-self: flex-start;
  margin-top: 94rpx;
}

.searchbar-result.hidden {
  display: none;
}

.assignment-list .countdown movable-area {
  height: 500rpx;
  width: 700rpx;
}

.assignment-list .countdown movable-view {
  height: 120rpx;
  width: 700rpx;
  z-index: 999;
}

.assignment-list .countdown .delete-btn {
  position: relative;
  z-index: 1;
  background: #E66671;
  text-align: center;
}

.test {
  flex-direction: row;
}
.assignment-list {
  width: 100%;
}

.countdown {
  width: 90%;
  height: fit-content;
  margin:10% 5% 0 5%;
  display: flex;
  flex-flow: column wrap;
  justify-content: flex-start;
}
.countdown_event {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-content: center;
}
.progress-bar{
  background-color: white;
  width: 75%;
  border: 1rpx solid #707070;
  height: 15%;
  color: #707070;
  border-radius: 5px;
  box-shadow: 5px 2.5px 2px beige;
}


.progress-bar .progress {
  width: calc(100% * var(--percent) / 100);
  --barvalue : calc(100% * var(--percent) / 100);
  /* animation: countdownBar 2s ; */
  padding: 1%;
  height: 100%;
  border-radius: 3px;
}

@keyframes countdownBar{
  from {width: 0;}
  to {width: var(--barvalue)}
}

.progress-bar .subject {
  position: relative;
  left: 10%;
  text-align: left;
  width:100%;
  overflow:show;
  white-space:nowrap;
  text-overflow:ellipsis;
  font-size: 1em;
}

/* .test  */

.countdown_days {
  width: 20%;
  padding: 1%;
  border: 1rpx solid #707070;
  border-radius: 5px;
  background-color: #4A4A4A;
  color: #FFFFFF;
  text-align: center;
}

.red_day {
  background-color: red;
}

