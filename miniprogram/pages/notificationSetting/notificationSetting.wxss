/* pages/notificationSetting/notificationSetting.wxss */
.container {
  color: #707070;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
} 
.notices {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 25rpx 0rpx;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
  background-color: #FFFFFF;
}
.notices view {
  display: flex;
  width: 100%;
  height: 100rpx;
  padding-left: 80rpx;
  border-bottom: 1rpx solid #EDEDED;
  align-items: center;
}
switch {
  zoom: .7;
  margin-left: auto;
  margin-right: 80rpx;
}

.time-zone {
  width: 100%;
  display: flex;
  height: 200rpx;
  flex-direction: column;
  align-items: center;
  margin: 25rpx 0rpx;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
  background-color: #FFFFFF;
}

.time-zone view {
  display: flex;
  width: 100%;
  height: 100rpx;
  padding-left: 80rpx;
  border-bottom: 1rpx solid #EDEDED;
  align-items: center;
}

.notice_duration {
  width: 100%;
  display: flex;
  height: 300rpx;
  flex-direction: column;
  align-items: center;
  margin: 25rpx 0rpx;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
  background-color: #FFFFFF;
}
.notice_duration view {
  display: flex;
  width: 100%;
  height: 100rpx;
  padding-left: 80rpx;
  border-bottom: 1rpx solid #EDEDED;
  align-items: center;
}
.notice_duration switch {
  margin-left: auto;
  margin-right: 80rpx;
}
