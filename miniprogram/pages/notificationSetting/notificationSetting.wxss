.container {
  color: #707070;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
}
.notices {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 25rpx 0rpx;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
  background-color: #FFFFFF;
}
.notices view {
  display: flex;
  width: 100%;
  height: 100rpx;
  padding-left: 80rpx;
  border-bottom: 1rpx solid #EDEDED;
  align-items: center;
}
switch {
  zoom: .7;
  margin-left: auto;
  margin-right: 80rpx;
}