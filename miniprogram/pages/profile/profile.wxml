<view class="container">
	<view wx:if="{{!hasUserInfo && canIUse}}" class="userinfo">
		<image class="userinfo-avatar" src="{{anonymousPlaceholder}}" />
		<button
		 open-type="getUserInfo"
		 bindgetuserinfo="getUserInfo"
		 hover-class="none"
		>
			<view>登录/注册</view>
			<view>></view>
		</button>
	</view>
	<view wx:else class="userinfo">
		<image
		 class="userinfo-avatar"
		 src="{{userInfo.avatarUrl}}"
		 mode="cover"
		></image>
		<text class="userinfo-nickname">{{userInfo.nickName}}</text>
	</view>
</view>
<view class="page-section">
	<navigator url="/pages/basicUserInfo/basicUserInfo">
		<view style="float: left; width: 80%;">基本资料</view>
		<view style="float: right; width: 5%;">></view>
	</navigator>
</view>
<view class="page-section" style="box-shadow: none; -webkit-box-shadow: none; border-bottom: 2rpx solid #cccccc;">
