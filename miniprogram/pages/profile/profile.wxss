/* pages/profile/profile.wxss */

.container {
    height: 242rpx;
    width: 100%;
    background-color:#587FFC;
    margin-top: 4rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.userinfo {
    display: flex;
    /* flex-direction: column; */
    align-items: center;
    /* align-content: space-between; */
    width: 642rpx;
    height: fit-content;
}
.userinfo button, .userinfo .userinfo-nickname{
    padding: 0 !important;
    margin-left: 20rpx !important;
    width: 504rpx !important;
    height: fit-content;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #FFFFFF;
    font-weight: normal;
    font-size: 34rpx;
}
.userinfo-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.page-section {
    margin-top: 40rpx;
    height: 100rpx;
    /* box-shadow: h-shadow v-shadow blur spread color inset; */
    box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
    -webkit-box-shadow: 0 4px 4px 1px #cccccc;
    display: flex;
    align-items: center;
    justify-content: center;
}
.page-section navigator {
    width: 642rpx;
    margin: 0 auto;
    height: fit-content;
    display: flex;
    justify-content: space-between;
}
.page-section navigator view {
    float: left;
}