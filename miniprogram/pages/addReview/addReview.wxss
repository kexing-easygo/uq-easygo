/* miniprogram/pages/addReview/addReview.wxss */
.container {
  font-size: 32rpx;
  color: #797979;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 4rpx;
  flex-flow: column nowrap;
}

.heading {
  width: 100%;
  height: 74rpx;
  background-color: #FFA9A3;
  display: flex;
  justify-content: center;
  align-items: center;
  color: black;
  font-weight: 300;
  font-size: 36rpx;
  margin-top: 20rpx;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
}

.name {
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  margin-top: 40rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
}

.nameHead {
  width: 20%;
  height: 100rpx;
  font-size: 34rpx;
  line-height: 100rpx;
  margin-left: 60rpx;
  color: black;
  font-weight: 300;
}

.name input {
  margin-left: 60rpx;
  color:black; 
  font-size: 32rpx;
}

.semester {
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  margin-top: 40rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
}

.semesterHead {
  width: 20%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
  margin-left: 60rpx;
  color: black;
  font-weight: 300;
}

.picker {
  color:black;
  margin-left: 60rpx;
  font-size: 32rpx;
}

.content {
  width: 100%;
  height: 460rpx;
  background-color: #ffffff;
  margin-top: 40rpx;
  display: flex;
  flex-flow: column wrap;
  justify-content: flex-start;
  align-items: flex-start;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
}

.content textarea {
  width: 80%;
  height: 400rpx;
  margin: 0 60rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
  color: black;
}

.txt {
  font-size: 30rpx;
}

.wordCount {
  /* position: fixed; */
  position: absolute;
  bottom: 1rpx;
  right: 1rpx;
}
