/* miniprogram/pages/addAutoCountDown.wxss */
.container {
  color: #707070;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
} 
.notices {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 25rpx 0rpx;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
  background-color: #FFFFFF;
}
.notices view {
  display: flex;
  width: 100%;
  height: 100rpx;
  padding-left: 80rpx;
  border-bottom: 1rpx solid #EDEDED;
  align-items: center;
}
switch {
  zoom: .7;
  margin-left: auto;
  margin-right: 80rpx;
}
.colours {
  width: 100%;
  height: 100rpx;
  font-size: 34rpx;
  color: rgba(0,0,0,0.9);
  background-color: #FFFFFF;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
  margin: 50rpx 0rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}

.cdtitle {
  margin-left: 7%;
  height: fit-content;
  width: 180rpx;
}

.cdDetail {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  margin-left: 30rpx;
}

.colorButton {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 22rpx;
}

.clicked_1 {
  outline: 1px solid #FA5151;
}
.clicked_2 {
  outline: 1px solid #FFF176;
}
.clicked_3 {
  outline: 1px solid #81C784;
}
.clicked_4 {
  outline: 1px solid #64B5F6;
}
.clicked_5 {
  outline: 1px solid #7986CB;
}

.notifySetting {
  width: 100%;
  background-color: #FFFFFF;
  margin-top: 40rpx;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  box-shadow: 0 10rpx 10rpx 2rpx #cccccc;
}

.notifyHeader {
  width: 85%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  text-align: center;
}

.notifyOption {
  width: 85%;
  height: 100rpx;
  color: #000000;
  font-size: 34rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: #ededed solid 1rpx;
}

.notifyOption .notifyTxt {
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  font-weight: 400;
}

checkbox .wx-checkbox-input{
  border-radius: 50%;
  width: 46rpx;
  height: 46rpx;
}
