.wrap {
  position: relative;
}

.wrap .content {
  position: relative;
  z-index: 1;
  background: #fff;
}

.wrap .content.animate {
  transition: transform 0.3s;
}

.wrap .action-wrap {
  position: absolute;
  display: inline-block;
  width: 120rpx;
  top: 0;
  right: 0;
  margin-right: 10rpx;
  margin-top: 10rpx;
  background: #E66671;
  border: 1rpx solid #707070;
  border-radius: 10px;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  
}

.wrap .action {
  display: flex;
  width: 120rpx;
  height: 100%;
  justify-content: center;
  align-items: center;
  background: #E66671;
}

.wrap .action text {
  font-size: 30rpx;
  color: #fff;
  background: #E66671;
}
